{
  "name": "artsflow-firebase",
  "scripts": {
    "lint": "prettier --check \"src/*.{ts,tsx}\" && eslint \"src/*.{ts,tsx}\"",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write \"src/*.{js,ts,tsx}\" && eslint --fix \"src/*.{js,ts,tsx}\"",
    "ch": "yarn lint && yarn type-check",
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions,firestore,hosting,auth",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "prepare": "husky install"
  },
  "engines": {
    "node": "14"
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  },
  "main": "lib/index.js",
  "dependencies": {
    "agora-access-token": "^2.0.4",
    "cors": "^2.8.5",
    "firebase-admin": "^9.5.0",
    "firebase-functions": "^3.13.2",
    "husky": "^5.1.3"
  },    
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.21.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "firebase-functions-test": "^0.2.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "typescript": "^4.2.3"
  },
  "private": true
}
